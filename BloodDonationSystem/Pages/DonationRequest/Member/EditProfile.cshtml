@page "/Member/EditProfile"
@model BloodDonationSystem.Pages.DonationRequest.Member.EditProfileModel

@{
    ViewData["Title"] = "Edit Profile";
    Layout = "_Layout";
}

@await Html.PartialAsync("Shared/Navbar/_NavbarMember")

<style>
    body {
        background-color: #ffd9e0 !important;
    }
</style>
<section class="container py-5" style="font-family: 'Poppins', sans-serif;">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0 rounded-4 p-5 bg-white">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="text-danger fw-bold mb-0">Edit Profile</h4>
                    <a class="btn btn-outline-danger rounded-pill px-4 fw-semibold" href="/Member/Profile">Back</a>
                </div>

                <form method="post">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label asp-for="UpdateUser.FullName" class="form-label fw-semibold">Full Name</label>
                            <input asp-for="UpdateUser.FullName" class="form-control form-control-lg rounded-3" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="UpdateUser.Email" class="form-label fw-semibold">Email</label>
                            <input asp-for="UpdateUser.Email" class="form-control form-control-lg rounded-3" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="UpdateUser.DateOfBirth" class="form-label fw-semibold">Date of Birth</label>
                            <input asp-for="UpdateUser.DateOfBirth" type="date" class="form-control form-control-lg rounded-3" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="UpdateUser.Gender" class="form-label fw-semibold">Gender</label>
                            <select asp-for="UpdateUser.Gender" class="form-select form-select-lg rounded-3">
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="UpdateUser.Phone" class="form-label fw-semibold">Phone Number</label>
                            <input asp-for="UpdateUser.Phone" class="form-control form-control-lg rounded-3" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="UpdateUser.Address" class="form-label fw-semibold">Address</label>
                            <input asp-for="UpdateUser.Address" class="form-control form-control-lg rounded-3" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="UpdateUser.BloodType" class="form-label fw-semibold">Blood Type</label>
                            <select asp-for="UpdateUser.BloodType" class="form-select form-select-lg rounded-3">
                                <option value="A+">A+</option>
                                <option value="A-">A-</option>
                                <option value="B+">B+</option>
                                <option value="B-">B-</option>
                                <option value="AB+">AB+</option>
                                <option value="AB-">AB-</option>
                                <option value="O+">O+</option>
                                <option value="O-">O-</option>
                            </select>
                        </div>
                    </div>

                    <input type="hidden" asp-for="UpdateUser.UserId" />
                    <input type="hidden" asp-for="UpdateUser.Role" />
                    <input type="hidden" asp-for="UpdateUser.Status" />
                    <input type="hidden" asp-for="UpdateUser.IsDonor" />

                    <div class="mt-5 text-end">
                        <button type="submit" class="btn btn-danger btn-lg rounded-pill px-5">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
