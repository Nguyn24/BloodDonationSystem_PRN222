@page "/Member/Profile"
@model BloodDonationSystem.Pages.DonationRequest.Member.ProfileModel

@{
    ViewData["Title"] = "User Profile";
    Layout = "_Layout";
}

@await Html.PartialAsync("Shared/Navbar/_NavbarMember")

<style>
    body {
        background-color: #ffd9e0 !important;
    }
</style>

<section class="container py-5" style="font-family: 'Poppins', sans-serif;padding-top: 20px;">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow border-0 rounded-4 p-4 bg-white">

                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="mb-0 fw-bold text-dark">Profile Information</h4>
                    <a class="btn btn-outline-danger rounded-pill fw-semibold px-4" href="/Member/EditProfile">Edit Profile</a>
                </div>

                <!-- Top Avatar + Name -->
                <div class="text-center mb-4">
                    <i class="bi bi-person fs-1 text-secondary"></i>
                    <h5 class="fw-bold">@Model.User.FullName</h5>
                    <p class="text-muted">@Model.User.Role</p>
                </div>

                <!-- Two Columns -->
                <div class="row g-4">
                    <!-- Personal Info -->
                    <div class="col-md-6">
                        <div class="border rounded-4 p-4 h-100 bg-light">
                            <h5 class="text-danger fw-semibold mb-3">
                                <i class="bi bi-person-circle me-2"></i> Personal Information
                            </h5>
                            <dl class="row mb-0">
                                <dt class="col-sm-5">Full Name</dt>
                                <dd class="col-sm-7">@Model.User.FullName</dd>

                                <dt class="col-sm-5">Gender</dt>
                                <dd class="col-sm-7">@Model.User.Gender</dd>

                                <dt class="col-sm-5">Email</dt>
                                <dd class="col-sm-7"><i class="bi bi-envelope me-2"></i> @Model.User.Email</dd>

                                <dt class="col-sm-5">Phone Number</dt>
                                <dd class="col-sm-7"><i class="bi bi-telephone me-2"></i> @Model.User.Phone</dd>

                                <dt class="col-sm-5">Date of Birth</dt>
                                <dd class="col-sm-7"><i class="bi bi-calendar me-2"></i> @Model.User.DateOfBirth.ToString("dd/MM/yyyy")</dd>

                                <dt class="col-sm-5">Address</dt>
                                <dd class="col-sm-7"><i class="bi bi-geo-alt me-2"></i> @Model.User.Address</dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Medical Info -->
                    <div class="col-md-6">
                        <div class="border rounded-4 p-4 h-100 bg-light">
                            <h5 class="text-danger fw-semibold mb-3">
                                <i class="bi bi-heart-pulse me-2"></i> Medical Information
                            </h5>
                            <dl class="row mb-0">
                                <dt class="col-sm-5">Blood Type</dt>
                                <dd class="col-sm-7">@Model.User.BloodTypeName</dd>

                                <dt class="col-sm-5">Status</dt>
                                <dd class="col-sm-7">@Model.User.Status</dd>

                                @if (Model.User.IsDonor == true && Model.User.DonorInformation != null)
                                {
                                    <dt class="col-sm-5">Height</dt>
                                    <dd class="col-sm-7">@Model.User.DonorInformation.Height cm</dd>

                                    <dt class="col-sm-5">Weight</dt>
                                    <dd class="col-sm-7">@Model.User.DonorInformation.Weight kg</dd>

                                    <dt class="col-sm-5">Medical Status</dt>
                                    <dd class="col-sm-7">@Model.User.DonorInformation.MedicalStatus</dd>

                                    <dt class="col-sm-5">Last Checked</dt>
                                    <dd class="col-sm-7">
                                        @(Model.User.DonorInformation.LastChecked != null ? @Model.User.LastDonationDate?.ToString("dd/MM/yyyy") ?? "N/A" : "N/A")
                                    </dd>

                                    <dt class="col-sm-5">Last Donation</dt>
                                    <dd class="col-sm-7">
                                        @(Model.User.LastDonationDate != null ? Model.User.LastDonationDate.Value.ToString("dd/MM/yyyy") : "N/A")
                                    </dd>
                                }
                            </dl>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
