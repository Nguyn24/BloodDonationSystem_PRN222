<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
</head>
<body style="display: flex; min-height: 100vh;">

<!-- Sidebar -->
<div style="width: 250px; background-color: #ffd3dc; padding: 20px;">
    <h3 class="fw-bold">HENORA</h3>
    <ul class="nav flex-column">
        <li class="nav-item">
            <a asp-page="/Admin/Dashboard/Index" class="nav-link">Dashboard</a>
        </li>
        <li class="nav-item">
            <a asp-page="/Admin/Users/Index" class="nav-link">User Management</a>
        </li>
    </ul>
</div>

<!-- Main Content -->
<div class="flex-grow-1">
    <!-- Header -->
    <div style="background-color: #ffe3e9; padding: 10px 20px; display: flex; justify-content: space-between;">
        <h4 class="m-0">Blood Donation Admin Dashboard</h4>
        <a href="/Account/Logout" class="btn btn-outline-danger">Logout</a>
    </div>

    <!-- Page Body -->
    <div class="p-4">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
</div>

</body>
</html>