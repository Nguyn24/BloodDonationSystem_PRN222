@page
@model BloodDonationSystem.Pages.LoginModel
@{
ViewData["Title"] = "Login";
Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/SignInPage.css" rel="stylesheet" />

<div class="signin-container">
    <form method="post" class="loginForm">
        <img class="loginTitle" src="/assets/banner2.png" alt="Blood Donation Logo" style="margin-bottom: 0;" />

        <h3 class="text-center" style="margin-top: 0; margin-bottom: 32px">Sign-in</h3>

        <div class="mb-3 text-start">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control input-field" placeholder="Enter your email" autofocus />
        </div>

        <div class="mb-3 text-start">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control input-field" placeholder="••••••" />
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <input type="checkbox" name="RememberMe" /> Remember me
            </div>
        </div>

        <button type="submit" class="btn loginBtn">Sign In</button>
        

        <div class="mt-4 text-center">
            Don't have an account?
            <a href="/Register" class="fw-bold text-danger">Sign up</a>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
        <p class="text-danger mt-3 text-center fw-bold">@Model.ErrorMessage</p>
        }
    </form>

    <ul class="background-login">
        @for (int i = 0; i < 12; i++) { <li></li> }
    </ul>
</div>
