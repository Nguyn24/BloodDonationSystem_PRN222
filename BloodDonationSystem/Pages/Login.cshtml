@page
@model BloodDonationSystem.Pages.LoginModel
@{
ViewData["Title"] = "Login";
Layout = null;
}


<style>
    .login-container {
        max-width: 420px;
        margin: 80px auto;
        padding: 40px;
        background-color: #fff;
        border-radius: 30px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        font-family: 'Raleway', sans-serif;
    }

        .login-container h2 {
            text-align: center;
            font-size: 36px;
            margin-bottom: 30px;
            font-family: 'Oi', cursive;
            color: #bd0026;
            font-weight: normal;
        }

    label {
        font-weight: 600;
        margin-bottom: 6px;
        display: block;
        color: #333;
        font-size: 14px;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 12px 14px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 12px;
        font-size: 16px;
        transition: border-color 0.3s;
    }

    input:focus {
        border-color: #bd0026;
        outline: none;
    }

    button[type="submit"] {
        width: 100%;
        padding: 12px;
        background-color: #bd0026;
        color: white;
        border: none;
        font-size: 16px;
        border-radius: 50px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s;
    }

        button[type="submit"]:hover {
            background-color: #a80022;
            transform: scale(0.98);
        }

    .error-message {
        color: red;
        text-align: center;
        font-weight: 600;
        margin-top: 15px;
    }
</style>

<div class="login-container">
    <h2>Login</h2>

    <form method="post">
        <label for="Email">Email</label>
        <input asp-for="Email" id="Email" />

        <label for="Password">Mật khẩu</label>
        <input asp-for="Password" id="Password" type="password" />

        <button type="submit">Đăng nhập</button>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p class="error-message">@Model.ErrorMessage</p>
        }
    </form>

</div>
