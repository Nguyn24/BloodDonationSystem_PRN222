@page
@model BloodDonationSystem.Pages.RegisterModel
@using BusinessObject.Entities.Enum
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/SignInPage.css" rel="stylesheet" />

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="loginForm">
        <img class="loginTitle" src="/assets/banner2.png" alt="Blood Donation Logo" />
        <h3 class="text-center">Sign-up</h3>

        <form method="post">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Full Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your full name" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                </div>

                <div class="col-md-6">
                    <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Gender" class="form-label">Gender</label>
                    <select asp-for="Gender" asp-items="Html.GetEnumSelectList<UserGender>()" class="form-select">
                        <option value="">Select gender</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label asp-for="Phone" class="form-label">Phone</label>
                    <input asp-for="Phone" class="form-control" placeholder="Enter your phone number" />
                </div>

                <div class="col-12">
                    <label asp-for="Address" class="form-label">Address</label>
                    <input asp-for="Address" class="form-control" placeholder="Enter your address" />
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-danger w-100 loginBtn">Sign Up</button>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <p class="text-danger mt-2 text-center">@Model.ErrorMessage</p>
            }

            <div class="mt-3 text-center">
                <p>
                    Already have an account?
                    <a href="/Login" class="fw-bold text-danger">Sign in</a>
                </p>
            </div>
        </form>
    </div>
</div>

<ul class="background-login">
    @for (int i = 0; i < 12; i++) { <li></li> }
</ul>
